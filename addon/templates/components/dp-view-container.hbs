<view-container
  id={{elementId}}
  class="{{class}} view-container"
>
  {{#if hasBlock}}

    {{yield (hash
      time=(component 'dp-view-text'
        class='time'
        inputs='time'
        datetime=datetime
        format=timeFormat
        size=size
        mood=mood
        requestInputFrame=requestInputFrame
      )
      day=(component 'dp-view-text'
        class='day'
        inputs='dow'
        datetime=datetime
        format=dayFormat
        size=size
        mood=mood
        requestInputFrame=requestInputFrame
      )
      date=(component 'dp-view-text'
        class='date'
        inputs='month'
        datetime=datetime
        format=dateFormat
        size=size
        mood=mood
        requestInputFrame=requestInputFrame
      )
      calendar=(component 'dp-view-calendar'
        class='date'
        datetime=datetime
        size=size
        mood=mood
        requestInputFrame=requestInputFrame
      )
      clock=(component 'dp-view-clock'
        class='time'
        datetime=datetime
        size=size
        mood=mood
        requestInputFrame=requestInputFrame
      )
    )}}

  {{else}}

    {{! INLINE }}

    {{#if showDay}}
      {{dp-view-text
        class='day'
        inputs='dow'
        datetime=datetime
        format=dayFormat
        size=size
        mood=mood
        requestInputFrame=requestInputFrame
      }}
    {{/if}}
    {{dp-view-text
      class='date'
      inputs='date'
      datetime=datetime
      format=dateFormat
      size=size
      mood=mood
      requestInputFrame=requestInputFrame
    }}
    {{#if showTime}}
      {{dp-view-text
        class='time'
        inputs='time'
        datetime=datetime
        format=timeFormat
        size=size
        mood=mood
        requestInputFrame=requestInputFrame
      }}
    {{/if}}

  {{/if}}

  {{yield}}

</view-container>
